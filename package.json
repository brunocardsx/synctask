{
  "name": "synctask-root",
  "version": "1.0.0",
  "description": "Root package for SyncTask application",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:dev && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm run build --prefix backend",
    "build:frontend": "npm run build --prefix frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm run test --prefix backend",
    "test:frontend": "npm run test --prefix frontend",
    "test:unit": "npm run test:unit --prefix backend",
    "test:integration": "npm run test:integration --prefix backend",
    "test:watch": "npm run test:watch --prefix backend",
    "test:coverage": "npm run test:coverage --prefix backend",
    "test:e2e": "npm run test:e2e --prefix backend",
    "test:check-env": "npm run test:check-env --prefix backend",
    "db:setup": "npm run db:setup --prefix backend",
    "db:reset": "npm run db:reset --prefix backend",
    "db:migrate": "npm run db:migrate --prefix backend",
    "db:studio": "npm run db:studio --prefix backend",
    "docker:dev": "cd backend && npm run docker:dev",
    "docker:dev:down": "cd backend && npm run docker:dev:down",
    "docker:prod": "cd backend && npm run docker:prod",
    "docker:prod:down": "cd backend && npm run docker:prod:down",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm run lint --prefix backend",
    "lint:frontend": "npm run lint --prefix frontend",
    "lint:fix": "npm run lint:fix --prefix backend && npm run lint:fix --prefix frontend",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "npm run format --prefix backend",
    "format:frontend": "npm run format --prefix frontend",
    "setup": "npm install && npm run build:backend && npm run docker:dev && npm run db:setup",
    "clean": "npm run docker:dev:down && rm -rf backend/dist backend/node_modules frontend/node_modules node_modules",
    "start": "npm run build && npm run docker:prod && npm run start:backend",
    "start:backend": "npm run start --prefix backend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
