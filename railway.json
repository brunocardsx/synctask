{
  "build": {
    "builder": "NIXPACKS",
    "env": {
      "NODE_VERSION": "20",
      "ROLLUP_USE_NODEJS": "true",
      "NPM_CONFIG_CACHE": "/tmp/npm-cache",
      "NPM_CONFIG_NO_CACHE": "true"
    },
    "buildCommand": "ROLLUP_USE_NODEJS=true npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npm run start"
  }
}
