# NPM configuration for SyncTask project

# Use exact versions for better reproducibility
save-exact=true

# Use npm ci for faster, reliable, reproducible builds
# This ensures package-lock.json is used
engine-strict=true

# Disable package-lock.json for root (we use workspaces)
package-lock=false

# Enable audit for security
audit=true

# Enable fund for funding information
fund=false

# Set registry (use default npm registry)
registry=https://registry.npmjs.org/

# Enable progress bar
progress=true

# Set log level
loglevel=warn


